@{
    ViewData["Title"] = "Comment settings";
}

<div class="content-container">
    <span class="content-container-title">Comment settings</span>
    <ul class="action-list">
        @if (!ViewBag.User.CommentsLocked)
        {
            <li class="action-list-item">
                <span class="action-list-item-title">Lock comments, disabling further comments</span>
                <form asp-action="LockComments" method="post">
                    <input type="hidden" name="id" value="@ViewBag.User.UserID">
                    <button class="action-list-item-button" type="submit">Lock comments</button>
                </form>
            </li>
        }
        else
        {
            <li class="action-list-item">
                <span class="action-list-item-title">Unlock comments, allowing users to reply again</span>
                <form asp-action="UnlockComments">
                    <input type="hidden" name="id" value="@ViewBag.User.UserID">
                    <button class="action-list-item-button" type="submit">Unlock comments</button>
                </form>
            </li>
        }
        <li class="action-list-item">
            <span class="action-list-item-title">Clear all comments</span>
            <form asp-action="ClearComments" method="post">
                <input type="hidden" name="id" value="@ViewBag.User.UserID">
                <button class="action-list-item-button" type="submit">Clear comments</button>
            </form>
        </li>
    </ul>
</div>